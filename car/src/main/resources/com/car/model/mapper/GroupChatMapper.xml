<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<!-- 논리적 클래스 만들기 -->
<!-- make physical class -->
<mapper namespace="com.car.model.mapper.GroupChatMapper">

	<sql id="selectDefault">
		SELECT chatno, totalnumber, deleted, title
		FROM GroupChat
	</sql>
	
	<!-- 논리적 메서드 만들기 -->
	<!-- make physical method -->
	<insert id="createGroupChat">
		INSERT INTO GroupChat
		(totalnumber, deleted, title)
		VALUES
		(1, 0, #{title});
	</insert>
	
	<select id="selectAllGroupChat" resultType="GroupChat">
		SELECT *
		FROM GroupChat
	</select>
	
	<select id="selectGroupChatByMemberId" 
		parameterType="string" resultType="GroupChat">			
		<include refid="selectDefault" />
		WHERE memberid = #{memberId}
	</select>
	
	<select id="selectGroupChatByGroupChatNo" 
		parameterType="int" resultType="GroupChat">			
		<include refid="selectDefault" />
		WHERE chatno = #{chatNo}
	</select>
	
	<select id="updateGroupChat" parameterType="GroupChat">	
		UPDATE GroupChat
		SET totalnumber = #{totalNumber} 
		WHERE chatno = #{chatNo}
	</select>
	
	<select id="deleteGroupChat" parameterType="int">
		DELETE 
		FROM GroupChat
		WHERE chatno = #{chatNo}
	</select>
	
</mapper>